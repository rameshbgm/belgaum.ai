generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ChatAudit {
  id           Int      @id @default(autoincrement())
  sessionId    String   @map("session_id")
  userRequest  String?  @map("user_request") @db.Text
  botResponse  String?  @map("bot_response") @db.Text
  dateTime     DateTime @default(now()) @map("date_time")

  @@map("chat_audit")
}

model ContactRequest {
  id              Int       @id @default(autoincrement())
  fullName        String    @map("full_name") @db.VarChar(255)
  email           String    @db.VarChar(255)
  phone           String    @db.VarChar(20)
  description     String    @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")
  isResponded     Boolean   @default(false) @map("is_responded")
  respondedAt     DateTime? @map("responded_at")
  responseContent String?   @map("response_content") @db.Text
  respondedBy     String?   @map("responded_by") @db.VarChar(255)

  @@map("contact_requests")
}
